#
# ~/.bash_aliases
#

alias deck="cd $QUARTERDECK"

alias bashrc='nvim ~/.bashrc'
alias sourcerc='source ~/.bashrc'
alias bashprof='nvim ~/.bash_profile'
alias bashaliases='nvim ~/.bash_aliases'
alias vimrc='nvim ~/.vimrc'
alias dwmstart='sudo nvim /usr/share/xsessions/bin/start.sh'
alias piconf='nvim ~/quarterdeck/.dots/picom/picom.conf'
alias xsess='sudo nvim /etc/lightdm/Xsession'

alias ls='ls --color=auto'
alias la='ls -A --color=auto'
alias ll='ls -l --color=auto'
alias lo='ls -1 --color=auto'

alias tree='tree -C'

alias lll='light-locker-command -l'

alias wget='wget --hsts-file="$XDG_CACHE_HOME/wget-hsts"'
